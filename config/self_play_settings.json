{
  "servers": [
    {
      "port": 8000,
      "name": "battlesnake-server-8000",
      "timeout_ms": 500,
      "max_memory_mb": 256
    },
    {
      "port": 8001,
      "name": "battlesnake-server-8001",
      "timeout_ms": 500,
      "max_memory_mb": 256
    },
    {
      "port": 8002,
      "name": "battlesnake-server-8002",
      "timeout_ms": 500,
      "max_memory_mb": 256
    },
    {
      "port": 8003,
      "name": "battlesnake-server-8003",
      "timeout_ms": 500,
      "max_memory_mb": 256
    }
  ],
  "game": {
    "board_width": 11,
    "board_height": 11,
    "game_mode": "solo",
    "timeout_ms": 500,
    "turn_limit": 500,
    "food_spawn_chance": 15,
    "minimum_food": 1,
    "hazard_damage": 0
  },
  "data_collection": {
    "target_games_per_hour": 500,
    "concurrent_servers": 4,
    "max_games_per_batch": 50,
    "board_encoding_channels": 12,
    "feature_vector_size": 32,
    "context_vector_size": 16,
    "data_directory": "data/self_play",
    "compression_level": 6,
    "max_file_size_mb": 100,
    "retention_days": 30,
    "backup_enabled": true,
    "min_game_turns": 5,
    "max_invalid_samples_percent": 10.0,
    "required_heuristic_components": [
      "safety",
      "territory",
      "opponent",
      "food",
      "exploration"
    ]
  },
  "training_pipeline": {
    "phases": [
      {
        "name": "bootstrap",
        "games_required": 2000,
        "learning_rate": 0.001,
        "batch_size": 64,
        "epochs": 50,
        "data_source": "heuristic_supervision",
        "validation_split": 0.15,
        "early_stopping_patience": 10
      },
      {
        "name": "hybrid",
        "games_required": 5000,
        "learning_rate": 0.0005,
        "batch_size": 128,
        "epochs": 100,
        "data_source": "mixed",
        "heuristic_mix_ratio": 0.7,
        "validation_split": 0.15,
        "early_stopping_patience": 10
      },
      {
        "name": "self_play",
        "games_required": 15000,
        "learning_rate": 0.0001,
        "batch_size": 256,
        "epochs": 200,
        "data_source": "self_play",
        "validation_split": 0.15,
        "early_stopping_patience": 15
      },
      {
        "name": "continuous",
        "games_required": -1,
        "learning_rate": 0.00005,
        "batch_size": 256,
        "epochs": 50,
        "data_source": "continuous",
        "validation_split": 0.15,
        "early_stopping_patience": 20
      }
    ],
    "tournament": {
      "evaluation_games": 2000,
      "confidence_level": 0.95,
      "minimum_improvement": 0.05,
      "min_win_rate_vs_heuristic": 0.65,
      "max_inference_time_ms": 10,
      "max_memory_usage_mb": 50,
      "min_strategic_quality_score": 0.70,
      "baseline_opponents": ["random", "heuristic", "previous_champion"],
      "champion_retention_games": 1000
    },
    "neural_network": {
      "model_type": "MultiTaskBattlesnakeNetwork",
      "optimizer": "AdamW",
      "weight_decay": 0.01,
      "gradient_clip_norm": 1.0,
      "loss_weights": {
        "position_evaluation": 0.4,
        "move_prediction": 0.4,
        "game_outcome": 0.2
      },
      "dropout_rate": 0.1,
      "label_smoothing": 0.1,
      "use_data_augmentation": true,
      "augmentation_probability": 0.5,
      "max_model_size_mb": 50,
      "max_inference_time_ms": 10,
      "target_accuracy_threshold": 0.70,
      "onnx_optimization_level": "all",
      "onnx_validation_tolerance": 1e-5
    },
    "continuous_training_enabled": true,
    "retraining_interval_hours": 12,
    "minimum_new_games_for_retraining": 2000,
    "model_version_format": "v{major}.{minor}_{timestamp}",
    "keep_model_history": 10,
    "performance_tracking_enabled": true,
    "metrics_collection_interval_s": 60,
    "training_progress_checkpoint_interval": 100,
    "max_training_time_hours": 6,
    "gpu_memory_fraction": 0.8,
    "cpu_workers": 4,
    "enable_model_rollback": true,
    "rollback_performance_threshold": 0.9,
    "max_consecutive_failures": 3
  },
  "log_level": "INFO",
  "log_file": "logs/self_play_collection.log",
  "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
  "health_check_interval_s": 30,
  "performance_monitoring_enabled": true,
  "error_retry_attempts": 3,
  "error_retry_delay_s": 5
}